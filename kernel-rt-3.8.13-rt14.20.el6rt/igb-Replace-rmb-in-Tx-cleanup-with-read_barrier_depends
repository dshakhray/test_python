    break;
 
   /* prevent any other reads prior to eop_desc */
-  rmb();
+  read_barrier_depends();
 
   /* if DD is not set pending work has not been completed */
   if (!(eop_desc->wb.status & cpu_to_le32(E1000_TXD_STAT_DD)))
